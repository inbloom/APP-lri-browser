source 'https://rubygems.org'

gem 'rails', '3.2.11'

gem 'mysql2'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  # See https://github.com/sstephenson/execjs#readme for more supported runtimes
  gem 'therubyracer', :platforms => :ruby
  gem 'uglifier', '>= 1.0.3'
end
gem 'less-rails'
# Twitter bootstrap baby
#gem 'twitter-bootstrap-rails', :git => 'git://github.com/seyhunak/twitter-bootstrap-rails.git'
# jQuery is the win
gem 'jquery-rails'
gem 'jquery-ui-rails'
# Devise for auth goodness
gem 'devise'
# Cancan for permission goodness
gem 'cancan'
# Give us a possessive method on strings
gem "possessive"
# Decorator pattern
gem "draper"
# Agnostic Enum Simulator
gem 'enum_simulator'
# OAuth Gems for inbloom/slc
gem 'omniauth'
gem 'omniauth-slc', '0.0.2'
gem 'oauth'
# HTTP Party Rockin
gem 'httparty'

# Dev/Test env only please
group :development, :test do
# Use thin as webserver
  gem 'thin'
end
